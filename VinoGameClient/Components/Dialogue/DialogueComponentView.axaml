<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:VinoGameClient.Components.Dialogue"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VinoGameClient.Components.Dialogue.DialogueComponentView"
			 x:DataType="vm:DialogueComponentViewModel">
	<Border Background="#222" CornerRadius="10" Padding="15">
		<StackPanel>
			<!-- Dialogue Text -->
			<TextBlock Text="{Binding Text}"
                       Foreground="White"
                       FontSize="18"
                       TextWrapping="Wrap"
                       Margin="0,10,0,10"/>
		</StackPanel>
	</Border>
</UserControl>
