<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VinoStudioClient.General.Navigation.NavigationView"
             xmlns:vm="using:VinoStudioClient.General.Navigation"
             x:DataType="vm:NavigationViewModel">

	<ListBox ItemsSource="{Binding Sections}"
             Padding="0,0,10,0"
             Background="LightGray"
             SelectedItem="{Binding SelectedSection, Mode=TwoWay}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<TextBlock Text="{Binding}" />
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>

</UserControl>
